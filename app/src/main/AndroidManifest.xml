<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gameboxone"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 添加系统特性声明 -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="true" />
    <uses-feature android:name="android.software.webview" android:required="true" />

    <!-- 添加WebView特性支持 -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />
    <!-- WebGL相关权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 网络权限 -->
    <!-- 允许应用程序访问互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许应用程序访问网络状态信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 存储权限 -->
    <!-- 读取外部存储权限，仅适用于 API 32 及以下 -->
    <!-- 优化存储权限声明 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:replace="android:maxSdkVersion"/>
    <!-- 写入外部存储权限，仅适用于 API 32 及以下 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <!-- 管理外部存储权限，用于高级文件访问 -->
<!--    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"-->
<!--        tools:ignore="ScopedStorage" />-->


    <application
        android:name="com.example.gameboxone.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gameboxone"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        tools:targetApi="31">
        <!-- 添加 WebView 渲染配置 -->
        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="false" />
        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="true" />
        <activity
            android:name="com.example.gameboxone.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gameboxone"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustResize"
            android:hardwareAccelerated="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.gameboxone.WebViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- 添加崩溃处理活动 -->
        <activity
            android:name=".ui.CrashHandlerActivity"
            android:process=":error_handler"
            android:taskAffinity="${applicationId}.error"
            android:excludeFromRecents="true"
            android:exported="false" />

        <!-- WebView 兼容性配置 -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- 删除了独立的 WebViewActivity 配置 -->
    </application>
</manifest>