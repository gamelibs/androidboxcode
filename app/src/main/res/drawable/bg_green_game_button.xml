<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角 -->
    <corners android:radius="28dp" />

    <!-- 绿色渐变，模拟游戏风格按钮 -->
    <gradient
        android:startColor="#8BF94A"
        android:endColor="#3FBF3A"
        android:angle="270" />

    <!-- 轻微内边距，让文字不要贴边 -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

    <!-- 细边框，增强立体感 -->
    <stroke
        android:width="1dp"
        android:color="#2E7D32" />
</shape>

