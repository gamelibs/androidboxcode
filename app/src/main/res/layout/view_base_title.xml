<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6F5656"
    android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="39dp">

        <TextView
            android:id="@+id/tv_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/tv_bar_title_right"
            android:layout_alignParentStart="true"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lines="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:singleLine="true"
            android:textColor="#806262"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_bar_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#835555"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>

    <View style="@style/horizontal_line" />
</LinearLayout>